{{#partial "principal" }}
    <div class="d-flex flex-row justify-content-between p-2">
        <form class="d-flex flex-row align-items-center" action="/usuarios">
            <input type="text" class="form-control me-2" placeholder="Nombre Usuario" value="{{nombreUsuario}}" name="nombreUsuario">
            <input type="submit" class="btn btn-primary" value="Buscar">
        </form>
        <form action="/usuarios/crear">
            <input class="btn btn-success" type="submit" value="Crear Usuario">
        </form>
    </div>

    {{#if usuarios.length}}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Telefono</th>
                <th scope="col">Email</th>
                <th scope="col">Admin</th>
                <th scope="col">Editar Información Personal</th>
                <th scope="col">Editar Notificaciones</th>
                <th scope="col">Eliminar Usuario</th>
            </tr>
            </thead>
            <tbody>
            {{#each usuarios}}
                <tr>
                    <th scope="row">{{nombre}}</th>
                    <td>{{apellido}}</td>
                    <td>{{telefono}}</td>
                    <td>{{email}}</td>
                    <td>{{#if admin}}Si{{else}}No{{/if}}</td>
                    <td>
                        <form class=" justify-content-center align-items-center" action="/usuarios/{{id}}">
                            <input type="submit" class="btn btn-outline-info" value="Editar">
                        </form>
                    </td>
                    <td>
                        <form class=" justify-content-center align-items-center" action="/usuarios/{{id}}/notificaciones">
                            <input type="submit" class="btn btn-outline-info" value="Editar">
                        </form>
                    </td>
                    <td>
                        <form class=" justify-content-center align-items-center" action="/usuarios/{{id}}/eliminar" method="POST">
                            <input type="submit" class="btn btn-danger" value="Eliminar">
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="w-100 d-flex justify-content-center">
            <div class="mt-5 px-3 py-2 text-center rounded bg-body-tertiary" style="width: fit-content;">No hay usuarios con el filtro específicado</div>
        </div>
    {{/if}}


{{/partial}}

