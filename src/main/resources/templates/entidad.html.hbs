{{#partial "principal" }}
    <div class="w-100 h-100 p-2">
        <div class="row">
            <div class="col text-center">
                <form class="p-2 mb-1 bg-body-tertiary container">
                    <label for="cheese" class="fs-4">{{entidad.nombre}}</label>
                    <style>
                        input[type='text'] { font-size: 24px; font-family: inherit; }
                    </style>
                </form>
                <form class="p-2 mb-1 bg-body-tertiary container">
                    <div class="row mb-3">
                        <label for="cheese"><p class="fw-bold">Tipo: </p> {{entidad.tipo}}</label>
                    </div>
                    <div class="row mb-3">
                        <label for="cheese"><p class="fw-bold">Mail: </p> {{entidad.email}}</label>
                    </div>
            </form>
            </div>
            <div class="d-flex justify-content-end" style="width: 50%">
                <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=200&amp;hl=es&amp;q={{entidad.localizacion.centroide.lat}},{{entidad.localizacion.centroide.lon}}&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                </iframe>
            </div>
        </div>
            <section class="container form-control" style="margin-top: 2% !important">
                {{#if entidad.establecimientos.length}}
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Establecimiento</th>
                            <th scope="col">Tipo</th>
                            <th scope="col">Ver</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each entidad.establecimientos}}
                            <tr>
                                <th scope="row">{{nombre}}</th>
                                <td>{{tipo}}</td>
                                <td>
                                    <form class=" justify-content-center align-items-center" action="/establecimientos/{{id}}" method="GET">
                                        <input type="submit" class="btn btn-outline-info" value="Ver">
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <div class="w-100 d-flex justify-content-center">
                        <div class="mt-5 px-3 py-2 text-center rounded bg-body-tertiary" style="width: fit-content;">No hay Establecimientos cargados en este momento</div>
                    </div>
                {{/if}}
            </section>

    </div>
{{/partial}}

