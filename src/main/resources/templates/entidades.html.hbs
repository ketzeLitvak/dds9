{{#partial "principal" }}
    <div class="w-100 p-2">
        <div class="d-flex flex-row justify-content-between p-3">
            <form class="d-flex flex-row align-items-center" action="/entidades" method="GET">
                <input type="text" class="form-control me-2" placeholder="Nombre Entidad" value="{{inputEntidad}}" name="entidadName">
                <div class="d-inline-flex gap-1">
                    <input type="submit" class="btn btn-primary" value="Buscar">
                </div>
            </form>
            {{#if loggedUser.admin}}
            <form action="/entidades/ranking" method="GET">
                <input type="submit" class="btn btn-success" value="Rankings">
            </form>
            {{/if}}
        </div>
        <section class="container form-control">
            {{#if entidades.length}}
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Entidad</th>
                        <th scope="col">Email</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Ver</th>
                    </tr>
                    </thead>
                    <tbody >
                    {{#each entidades}}
                        <tr>
                            <th scope="row">{{nombre}}</th>
                            <td>{{email}}</td>
                            <td>{{tipo}}</td>
                            <td>
                                <form class="justify-content-center align-items-center" action="/entidades/{{id}}" method="GET">
                                    <input type="submit" class="btn btn-outline-info" value="Ver">
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            {{else}}
                <div class="w-100 d-flex justify-content-center">
                    <div class="mt-5 px-3 py-2 text-center rounded bg-body-tertiary" style="width: fit-content;">No hay Entidades cargadas en este momento</div>
                </div>
            {{/if}}
        </section>
    </div>
{{/partial}}

